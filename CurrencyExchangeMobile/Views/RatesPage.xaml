<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyExchangeMobile.Views.RatesPage"
             Title="Exchange Rates"
             BackgroundColor="#f8f9fa">

    <Grid RowDefinitions="Auto,*">

        <!-- Header with Refresh -->
        <Frame Grid.Row="0" 
               BackgroundColor="White" 
               CornerRadius="0" 
               Padding="20" 
               HasShadow="True"
               Margin="0,0,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <StackLayout Grid.Column="0" VerticalOptions="Center">
                    <Label Text="Current Exchange Rates" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#2c3e50"/>
                    <Label x:Name="LastUpdatedLabel" 
                           Text="Loading..." 
                           FontSize="12" 
                           TextColor="#7f8c8d"/>
                </StackLayout>
                <Button Grid.Column="1" 
                        x:Name="RefreshButton"
                        Text="↻"
                        BackgroundColor="#3498db"
                        TextColor="White"
                        CornerRadius="20"
                        FontSize="16"
                        FontAttributes="Bold"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnRefreshClicked"/>
            </Grid>
        </Frame>

        <!-- Rates List -->
        <ScrollView Grid.Row="1" Padding="20">
            <StackLayout>

                <!-- Loading Indicator -->
                <StackLayout x:Name="LoadingContainer" 
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Margin="0,50,0,50"
                            IsVisible="True">
                    <ActivityIndicator x:Name="LoadingIndicator" 
                                     IsRunning="True" 
                                     IsVisible="True"
                                     Color="#3498db"
                                     Scale="1.5"/>
                    <Label Text="Loading exchange rates..." 
                           FontSize="16" 
                           TextColor="#7f8c8d"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </StackLayout>

                <!-- Rates Container -->
                <StackLayout x:Name="RatesContainer" IsVisible="False">
                    <!-- Dynamic rate cards will be added here -->
                </StackLayout>

                <!-- Error Container -->
                <StackLayout x:Name="ErrorContainer" 
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Margin="0,50,0,50"
                            IsVisible="False">
                    <Label Text="❌" 
                           FontSize="40" 
                           HorizontalOptions="Center"/>
                    <Label Text="Unable to load exchange rates" 
                           FontSize="16" 
                           TextColor="#e74c3c"
                           HorizontalOptions="Center"
                           Margin="0,10,0,10"/>
                    <Label Text="Please check your connection and try again" 
                           FontSize="14" 
                           TextColor="#7f8c8d"
                           HorizontalOptions="Center"/>
                    <Button Text="Try Again"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,20,0,0"
                            Clicked="OnRetryClicked"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>

    </Grid>
</ContentPage>