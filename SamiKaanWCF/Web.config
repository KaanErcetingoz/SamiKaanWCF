<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" executionTimeout="300" maxRequestLength="51200" />
	</system.web>

	<system.serviceModel>

		<!-- SERVICE DEFINITIONS -->
		<services>
			<!-- Exchange Rate Service -->
			<service name="SamiKaanWCF.ExchangeRateService" behaviorConfiguration="ServiceBehavior">
				<!-- Endpoint 1: Your original SOAP endpoint for WCF Test Client. This is unchanged. -->
				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="SamiKaanWCF.IExchangeRateService"
						  bindingConfiguration="BasicHttpBinding_Config" />
				<!-- Endpoint 2: REST/JSON for MAUI app. Uses the new "RestWrappedBehavior". -->
				<endpoint address="rest"
						  binding="webHttpBinding"
						  contract="SamiKaanWCF.IExchangeRateService"
						  behaviorConfiguration="RestWrappedBehavior" />
				<!-- Endpoint 3: Your original Metadata endpoint. This is unchanged. -->
				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" />
			</service>

			<!-- User Service -->
			<service name="SamiKaanWCF.Service.UserService" behaviorConfiguration="ServiceBehavior">
				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="SamiKaanWCF.Contracts.IUserService"
						  bindingConfiguration="BasicHttpBinding_Config" />
				<endpoint address="rest"
						  binding="webHttpBinding"
						  contract="SamiKaanWCF.Contracts.IUserService"
						  behaviorConfiguration="RestWrappedBehavior" />
				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" />
			</service>

			<!-- Currency Transaction Service -->
			<service name="SamiKaanWCF.Service.CurrencyTransactionService" behaviorConfiguration="ServiceBehavior">
				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="SamiKaanWCF.Contracts.ICurrencyTransactionService"
						  bindingConfiguration="BasicHttpBinding_Config" />
				<endpoint address="rest"
						  binding="webHttpBinding"
						  contract="SamiKaanWCF.Contracts.ICurrencyTransactionService"
						  behaviorConfiguration="RestWrappedBehavior" />
				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" />
			</service>
		</services>

		<!-- BINDING CONFIGURATIONS (Unchanged from your original file) -->
		<bindings>
			<basicHttpBinding>
				<binding name="BasicHttpBinding_Config"
						 maxReceivedMessageSize="2147483647"
						 maxBufferSize="2147483647"
						 receiveTimeout="00:10:00"
						 sendTimeout="00:10:00"
						 transferMode="Buffered">
					<readerQuotas maxDepth="2147483647"
								  maxStringContentLength="2147483647"
								  maxArrayLength="2147483647"
								  maxBytesPerRead="2147483647"
								  maxNameTableCharCount="2147483647" />
					<security mode="None">
						<transport clientCredentialType="None" />
					</security>
				</binding>
			</basicHttpBinding>
		</bindings>

		<!-- BEHAVIORS -->
		<behaviors>
			<!-- FIX: Added new endpoint behavior section for REST -->
			<endpointBehaviors>
				<!-- This new behavior enables REST and sets the body style to Wrapped, which fixes your error. -->
				<behavior name="RestWrappedBehavior">
					<webHttp defaultBodyStyle="WrappedRequest" />
				</behavior>
			</endpointBehaviors>
			<!-- Your original serviceBehaviors section is UNCHANGED. -->
			<serviceBehaviors>
				<behavior name="ServiceBehavior">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
					<serviceDebug includeExceptionDetailInFaults="true"/>
					<dataContractSerializer maxItemsInObjectGraph="2147483647" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<!-- All sections below are preserved exactly from your original config -->
		<serviceHostingEnvironment aspNetCompatibilityEnabled="true"
								   multipleSiteBindingsEnabled="true"
								   minFreeMemoryPercentageToActivateService="0" />
		<protocolMapping>
			<add binding="basicHttpBinding" scheme="http" />
			<add binding="basicHttpsBinding" scheme="https" />
		</protocolMapping>

	</system.serviceModel>

	<system.webServer>
		<modules runAllManagedModulesForAllRequests="true"/>
		<directoryBrowse enabled="true"/>
		<defaultDocument>
			<files>
				<clear />
				<add value="ExchangeRateService.svc" />
				<add value="UserService.svc" />
				<add value="CurrencyTransactionService.svc" />
			</files>
		</defaultDocument>
	</system.webServer>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

</configuration>
